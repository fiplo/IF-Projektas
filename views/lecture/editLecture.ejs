<html>
<head>
  <%- include('../partial/head.ejs') %>
</head>

<body>
<div class="container">

    <div class="col-sm-6 col-sm-offset-3">

        <h1 style="width: 500px;"><span class="fa fa-sign-in"></span> Vartotoju redagavimas</h1>
    
        <form action="/editLecture/<%= lecture._id%>" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label>ID</label>
                <input type="text" class="form-control" value="<%= lecture._id %>" readonly>
            </div>

            <div class="form-group">
                <label>Pavadinimas</label>
                <input type="text" class="form-control" name="name" value="<%= lecture.name%>">
            </div>

            <div class="form-group">
                <label>Aprasymas</label>
                <input type="text" class="form-control" name="desc" value="<%= lecture.desc%>">
            </div>

            <button type="submit" class="btn btn-warning btn-lg" value="upload">Atnaujinti</button>
        </form>
        
        <button type="button" class="btn btn-primary" onclick="location.href = '/list';">Atgal</button>
    
        <hr>
        
    </div>

</form>

</div>
</body>
</html>
