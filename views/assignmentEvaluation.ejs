<!-- views/signup.ejs -->
<!doctype html>
<html>
<head>
  <%- include('partial/head.ejs') %>
</head>
<body>
<div class="container">

    <div class="col-sm-6 col-sm-offset-3">

        <h1 style="width: 500px;"><span class="fa fa-sign-in"></span> Atsiskaitymo ivertinimas</h1>

        <form action="/" method="post" enctype="multipart/form-data">

            <div class="form-group">
                <label>Vertintojas</label>
                <input type="text" class="form-control" value="<%= user.local.email %>" readonly>
            </div>

            <div class="form-group">
                <label>Studentas</label>
                <input type="text" class="form-control" value="<%= //assignment.student %>" readonly>
            </div>

            <div class="form-group">
                <label>Atsiskaitymas</label>
                <h4><%= //assignment.name%></h4>
            </div>

            <div class="form-group">
                <label>Atsiskaitymo aprasymas</label><br>
                <p><%=//assignment.desc%></p>
            </div>

            <div class="form-group">
                <label>Atlikti iki:</label><br>
                <p><%= //assignment.completeUntil%></p>
            </div>

            <button type="button" class="btn btn-primary" onclick="//location.href = '/*redirect to student's file*';">Perziureti darba</button>
            
            <div class="form-group">
                <label>Pazimys</label><br>
                <input type="number" class="form-control" name="mark">
            </div>


            <button type="submit" class="btn btn-warning btn-lg" value="upload">Ivertinti</button>
        </form>

        <hr>

    </div>

</div>
</body>
</html>
