<div class="page-header text-center">
    <h1><span class="fa fa-anchor"></span> Mano Zinutes</h1>
</div>

<button type="button" class="btn btn-primary" onclick="location.href = '/newMessage';">Nauja zinute</button>
<button type="button" class="btn btn-primary" onclick="location.href = '/profile';">Atgal</button>
<hr class="my-4" />   

<div class="row text-center container">
<% if(user.local.messages.received == 0) { %>
    <p>You have no messages :(</p>
<% } else { %>
    <% user.local.messages.received.forEach(function(message) { %>
        <div class="col-md-12">
          <div class="card mb-4 shadow-sm">
            <div class="card-body ">
              <h5 class="card-text">Subject: <%= message.subject %></h5> </hr>
              <p class="card-text">From: <% userList.forEach( (user) => { if(message.from == user._id) { %> <%= user.local.email%> <% }}) %></p>
              <p class="card-text">Message: <%= message.text %> </p>
            </div>
          </div>
        </div>
      <% }) %>
<% } %>
</div>

<hr class="my-4" />
  