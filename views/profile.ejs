<html>
<head>
  <%- include('partial/head.ejs') %>
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Profilis</h1>
        <a href="/logout" class="btn btn-default btn-sm">Atsijungti</a>
    </div>


    <hr class="my-4">

    <div class="row text-break">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
          <div class="card mb-4 shadow-sm text-center">
            <div class="well">
                <h3><span class="fa fa-user"></span> Vartotojo Informacija</h3>

                    <p>
                        <strong>Id</strong>: <%= user._id %><br>
                        <strong>El. paštas</strong>: <%= user.local.email %><br>
                        <strong>Fakultetas</strong>: <%= user.local.faculty%><br>
                        <strong><a href="editProfile">Redaguoti profili</a></strong>
                    </p>

            </div>
          </div>
        </div>
        <% if(user.local.userType === 'admin') {%>
        <div class="col-sm-6">
           <div class="card mb-4 shadow-sm text-center">
             <div class="well">
                  <h3><span class="fa fa-inbox"></span> Moduliu registravimas</h3>
                  <p>
                      <strong><a href="/post">Spustelėkite čia</a></strong><br>
                  </p>
              </div>
            </div>
        </div>

        <div class="col-sm-6">
            <div class="card mb-4 shadow-sm text-center">
              <div class="well">
                   <h3><span class="fa fa-inbox"></span> Administratoriaus sasaja</h3>
                   <p>
                       <strong><a href="/admin">Spustelėkite čia</a></strong><br>
                   </p>
               </div>
             </div>
         </div>
      <% } %>
    <div class="col-sm-6">
      <div class="card mb-4 shadow-sm text-center">
        <div class="well">
              <h3><span class="fa fa-inbox"></span> Zinutes</h3>
              <p>
                  <strong><a href="/messages">Spustelėkite čia</a></strong><br>
              </p>
          </div>
        </div>
    </div>
      
    </div>
    <div class="row">
        <div class="col-sm-6">
          <div class="card mb-4 shadow-sm text-center">
            <div class="well">
                <h3><span class="fa fa-bullhorn"></span> Visi moduliai</h3>
                <p>
                    <strong><a href="/list">Spustelėkite čia</a></strong><br>
                </p>
              </div>
            </div>
          </div>
      </div>

</div>
</body>
</html>
