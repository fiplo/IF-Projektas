<html>
<head>
  <%- include('partial/head.ejs') %>
</head>

<body>
<div class="container">

    <div class="col-sm-6 col-sm-offset-3">

        <h1 style="width: 500px;"><span class="fa fa-sign-in"></span> Vartotoju redagavimas</h1>
    
        <form action="/editUser/<%=userInfo._id%>" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label>ID</label>
                <input type="text" class="form-control" value="<%= userInfo._id %>" readonly>
            </div>

            <div class="form-group">
                <label>El. pastas</label>
                <input type="text" class="form-control" name="email" value="<%= userInfo.local.email%>">
            </div>

            <div class="form-group">
                <label>Tipas</label><br>
                <select name="userType">
                    <option value="student" <%= userInfo.local.userType === 'student' ? "selected" : ""%> >Studentas</option>
                    <option value="lecturer" <%= userInfo.local.userType === 'lecturer' ? "selected" : ""%> >Destytojas</option>
                    <option value="admin" <%= userInfo.local.userType === 'admin' ? "selected" : ""%> >Administratorius</option>
                    <option value="unconfirmed" <%= userInfo.local.userType === 'unconfirmed' ? "selected" : ""%> >Neapibreztas</option>
                </select>
            </div>

            <div class="form-group">
                <label>Fakultetas</label>
                <input type="text" class="form-control" name="faculty" value="<%= userInfo.local.faculty%>">
            </div>

            <button type="submit" class="btn btn-warning btn-lg" value="upload">Atnaujinti</button>
        </form>
    
        <hr>
        
    </div>

</form>

</div>
</body>
</html>
