<!-- views/signup.ejs -->
<!doctype html>
<html>
<head>
  <%- include('partial/head.ejs') %>
</head>
<body>
<div class="container">

    <div class="col-sm-6 col-sm-offset-3">

        <h1 style="width: 500px;"><span class="fa fa-sign-in"></span> Atsiskaitymo pateikimas</h1>

        <form action="/" method="post" enctype="multipart/form-data">

            <div class="form-group">
                <label>Studentas</label>
                <input type="text" class="form-control" value="<%= user.local.email %>" readonly>
            </div>

            <div class="form-group">
                <label>Atsiskaitymas</label>
                <input type="text" class="form-control" value="<%= //assignment.name%>" readonly>
            </div>

            <div class="form-group">
                <label>Atsiskaitymo aprasymas</label><br>
                <input type="text" class="form-control" value="<%= //assignment.desc%>" readonly>
            </div>

            <div class="form-group">
                <label>Atlikti iki:</label><br>
                <input type="text" class="form-control" value="<%= //assignment.completeUntil%>" readonly>
            </div>

            <div class="form-group">
                <label>Mano darbas</label>
                <input type="file" class="form-control" name="file">
            </div>
            
            <button type="submit" class="btn btn-warning btn-lg" value="upload">Siusti</button>
        </form>

        <hr>

    </div>

</div>
</body>
</html>
